.sdks-page
  display block
  max-width 100%
  min-height 100vh - $navbarHeight
  padding 0 2rem 0
  margin 0 auto 0

  hr
    display none

  .title-container
    justify-content center
    text-align center
    padding-bottom 1rem

    h1:first-child
      padding-top 1rem !important
      margin-bottom -0.8rem !important

  .sub-title-container
    justify-content center
    text-align center
    border-bottom solid 1px var(--bgcolor-light)

  .tech-container
    display flex
    flex-direction column
    justify-content center
    margin-top 1rem

    p
      margin-top -18px !important

  .tech-item
    display flex
    margin 0.5em 3.5em
    background-color var(--feature-bgcolor)
    height 5em
    border-radius 6px
    padding 1em

    .icon-container
      padding 5px

  img.tech-icon.disabled
      opacity 0.5
      pointer-events: none !important

    img.tech-icon
      margin 0 
      // padding-top 10px
      height 4.5em
      width auto
      cursor: pointer !important


  .tech-item:hover .tech-icon:not(.disabled)


    @media (min-width $MQNarrow)
      display flex
      justify-content space-evenly
      align-items center
      text-align left

    @media (max-width $MQNarrow)
      min-height 100vh - $navbarMobileHeight
      padding-top $navbarMobileHeight

    @media (max-width $MQMobileNarrow)
      padding-left 1.5rem
      padding-right 1.5rem

  .description
    color #656565
    font-size 1rem
    line-height 1.5
    text-align center
    font-weight 500
    margin 1rem 1.5rem 1.5rem

    @media (max-width $MQMobile)
      font-size 1.4rem

    @media (max-width $MQMobileNarrow)
      font-size 1.2rem
