.quickstarts-page
  display block
  max-width 100%
  min-height 100vh - $navbarHeight
  padding 0 2rem 0
  margin 0 auto 0

  hr
    display none

  .title-container
    justify-content center
    text-align center
    border-bottom solid 1px var(--bgcolor-light)
    padding-top 1rem

    h1:first-child
      padding-top 1rem !important
      margin-bottom 1rem !important

  .tech-container
    display flex
    justify-content center
    margin-top 1rem

    p
      margin-top -18px !important

  .tech-item
    display flex
    flex-grow 1
    margin 1.5em
    background-color var(--feature-bgcolor)
    border-radius 6px
    padding 1em
    transition 0.3s
    text-align center
    justify-content center

    &:hover    
      transform: scale(1.025)
      box-shadow: 0 2px 12px 0 var(--bgcolor-light)
      background-color: var(--feature-bgcolor)

  img.tech-icon.disabled
      opacity 0.5
      pointer-events: none !important

    img.tech-icon
      width 75px
      border none
      cursor: pointer !important

  .header-container
    display: flex
    align-items: center
    flex-direction: row

  .title-section
    text-align center
    margin-bottom 3.5rem

    @media (min-width $MQNarrow)
      display flex
      justify-content space-evenly
      align-items center
      text-align left

    @media (max-width $MQNarrow)
      min-height 100vh - $navbarMobileHeight
      padding-top $navbarMobileHeight

    @media (max-width $MQMobileNarrow)
      padding-left 1.5rem
      padding-right 1.5rem

  .description
    color #656565
    font-size 1rem
    line-height 1.5
    text-align center
    font-weight 500
    margin 1rem 1.5rem 1.5rem

    @media (max-width $MQMobile)
      font-size 1.4rem

    @media (max-width $MQMobileNarrow)
      font-size 1.2rem
