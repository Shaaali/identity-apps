.social-login-index > .page > .page-title > h1
  visibility hidden

.social-login-page
  .title-container
    justify-content center
    text-align center

    h1:first-child
      margin-top 0 !important
      padding-top 0 !important
  
  .idp-container
    display flex
    flex-wrap wrap
    justify-content center
    margin-top 1rem
  
  .idp-item
    display inline-block
    flex 1 1 15%
    min-width 139px
    max-width 140px
    margin 1.5em
    border-radius 6px
    padding 1em
    background darken(#fff, 2%)
    transition all 0.3s
    text-align center
    cursor pointer
    border 1px solid var(--border-color)

    .theme-dark &
      background darken(#212a32, 10%)
      
      &.darkfix
        img.idp-icon
          filter invert(1)

    &:hover    
      transform scale(1.025)
      box-shadow 0 2px 12px 0 var(--bgcolor-light)
      text-decoration none !important
      color var(--text-color) !important
  
  .idp-name
    padding-top 20px
    display block
    font-size 18px
    font-weight 600
    margin 0
    text-decoration none
    color var(--text-color)

    &:hover
      text-decoration none
      color var(--text-color)

  img.idp-icon.disabled
      opacity 0.5
      pointer-events none !important

    img.idp-icon
      height 50px
      width auto
      border none
      cursor: pointer !important
      margin 1rem auto

.cardAnim-enter-active, .cardAnim-leave-active
  transition all 0.3s !important

.cardAnim-enter, .cardAnim-leave-to
  opacity 0 !important

.cardAnim-leave-active
  position absolute

.cardAnim-move
  transition transform 0.3s !important


