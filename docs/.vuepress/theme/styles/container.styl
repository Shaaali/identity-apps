$darkBgColor ?= #1e1e1e
$darkTextColor ?= #9e9e9e

.custom-block
  position relative
  border-radius 4px !important

  .custom-block-title
    font-weight 500 !important

  &.info
    border-color var(--info-block-borderColor) !important
    background var(--info-block-bgColor) !important
  
  &.tip
    border-color var(--tip-block-borderColor) !important
    background var(--tip-block-bgColor) !important
  
  &.warning
    border-color var(--warn-block-borderColor) !important
    background var(--warn-block-bgColor) !important

  &.danger
    border-color var(--danger-block-borderColor) !important
    background var(--danger-block-bgColor) !important

  &.info, &.tip, &.warning, &.danger
    margin 1rem 0
    padding 0.1rem 1.5rem
    border solid !important
    border-width 1px !important

    .custom-block-title
      margin-left 30px
      font-size 16px

    &::before
      position absolute
      top 14px
      left 20px !important
      width 25px
      height 25px
      border-radius 50%

    p
      font-size 14px

  &.info, &.tip, &.warning, &.danger, &.details
    a
      color var(--accent-color, $accentColor)

    .theme-dark &
      background lighten($darkBgColor, 10%)
      color lighten($darkTextColor, 10%)

      code
        background #444

  &.details
    display block
    position relative
    margin 1.6em 0
    padding 1.6em
    background #eee
    border-radius 0.25rem

    h4
      margin-top 0

    figure, p
      &:last-child
        margin-bottom 0
        padding-bottom 0

    summary
      outline none
      cursor pointer

    &[open] summary
      margin-bottom 0.5em
