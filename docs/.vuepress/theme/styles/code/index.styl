{$contentClass}
  code
    color var(--text-color-l20)
    padding 0.25rem 0.5rem
    margin 0
    font-size 0.85em
    border-radius 3px
    overflow-wrap break-word

    .token
      &.deleted
        color #EC5975

      &.inserted
        color var(--accent-color)

{$contentClass}
  pre, pre[class*='language-']
    line-height 1.4
    padding 1.75rem 0.25rem
    margin 0.85rem 0 0 5px
    background var(--code-bgcolor)
    border-radius 6px
    overflow auto

    code
      color var(--grey3)
      padding 0
      background transparent !important
      border-radius 0

div[class*='language-']
  position relative
  background var(--code-bgcolor) !important
  border-radius 6px

  .highlight-lines
    user-select none
    padding-top 1.9rem
    position absolute
    top 0
    left 0
    width 100%
    line-height 1.4

  pre, pre[class*='language-']
    background transparent
    position relative
    z-index 1

    code
      position relative !important

  &::before
    position absolute
    z-index 3
    top 0.8em
    right 1em
    font-size 0.75rem

  &.no-line-numbers, &.language-no-line-numbers
    &.line-numbers-mode::after
      content none

    .line-numbers-wrapper
      display none

    pre, pre[class*='language-']
      padding-left 1.5rem

  &.line-numbers-mode
    .highlight-lines .highlighted
      position relative

      &:before
        content ' '
        position absolute
        z-index 3
        left 0
        top 0
        display block
        width $lineNumbersWrapperWidth
        height 100%

    pre
      padding-left ($lineNumbersWrapperWidth + 1) rem
      vertical-align middle

    .line-numbers-wrapper
      position absolute
      top 0
      width $lineNumbersWrapperWidth
      text-align center
      padding 1.75rem 0
      line-height 1.4

      br
        user-select none

      .line-number
        position relative
        z-index 4
        user-select none
        font-size 0.85em

    &::after
      content ''
      position absolute
      z-index 2
      top 0
      left 0
      width $lineNumbersWrapperWidth
      height 100%
      border-radius 6px 0 0 6px
      background var(--code-bgcolor)

