{$contentClass}
  code
    color var(--text-color-l20)
    padding 0.25rem 0.5rem
    margin 0
    font-size 0.85em
    border-radius 3px
    overflow-wrap break-word

    .token
      &.deleted
        color #EC5975

      &.inserted
        color var(--accent-color)

{$contentClass}
  pre, pre[class*='language-']
    line-height 1.4
    padding 1.25rem 1.5rem
    margin 0.85rem 0 0 5px
    background var(--code-bgcolor)
    border-radius 6px
    overflow auto

    code
      color #fff
      padding 0
      background transparent !important
      border-radius 0

div[class*='language-']
  position relative
  background #212A32
  border-radius 6px

  .highlight-lines
    user-select none
    padding-top 1.3rem
    position absolute
    top 0
    left 0
    width 100%
    line-height 1.4

  pre, pre[class*='language-']
    background transparent
    position relative
    z-index 1

    code
      position relative !important

  &::before
    position absolute
    z-index 3
    top 0.8em
    right 1em
    font-size 0.75rem

  &:not(.line-numbers-mode)
    .line-numbers-wrapper
      display none

  &.line-numbers-mode
    .highlight-lines .highlighted
      position relative

      &:before
        content ' '
        position absolute
        z-index 3
        left 0
        top 0
        display block
        width $lineNumbersWrapperWidth
        height 100%

    pre
      padding-left ($lineNumbersWrapperWidth + 1) rem
      vertical-align middle

    .line-numbers-wrapper
      position absolute
      top 0
      width $lineNumbersWrapperWidth
      text-align center
      padding 1.25rem 0
      line-height 1.4

      br
        user-select none

      .line-number
        position relative
        z-index 4
        user-select none
        font-size 0.85em

    &::after
      content ''
      position absolute
      z-index 2
      top 0
      left 0
      width $lineNumbersWrapperWidth
      height 100%
      border-radius 6px 0 0 6px
      background #212A32

for lang in $codeLang
  div{'[class~="language-' + lang + '"]'}
    &:before
      content '' + lang

div[class~='language-javascript']
  &:before
    content 'js'

div[class~='language-typescript']
  &:before
    content 'ts'

div[class~='language-markup']
  &:before
    content 'html'

div[class~='language-markdown']
  &:before
    content 'md'

div[class~='language-json']:before
  content 'json'

div[class~='language-ruby']:before
  content 'rb'

div[class~='language-python']:before
  content 'py'

div[class~='language-bash']:before
  content 'sh'

div[class~='language-php']:before
  content 'php'

div[class~='language-stylus']:before
  content 'styl'

// Overriding default CSS in codeblocks UI.
.code-group-nav
  background-color #eee !important
  padding-left 0px !important

  .code-group-ul
    padding 0

    .code-group-li
      padding 5px

    .code-group-nav-tab
      color #2d2d2d
      padding 10px 15px 10px 15px
      font-weight 500
    
      &.active
        border-bottom none
        color #000
        font-weight 600
        background-color #ccc
        border-radius 6px
      
      &.active::before
        background none

      &.active::after
        background none
      
      &:hover
        background-color #ccc
        border-radius 6px

.copy-code-button
  top -16px
  background-color var(--accent-color)

  &:hover
    background-color #212A32

.language-text
  margin-left 5px
